<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="idConfirmationDialog" showHeader = "false"
    class="sapUiPopupWithPadding">
    <content>
        <Text text="Do you want to send the mail?">
        </Text>
    </content>
    <beginButton>
        <Button text="Ok" press="onPressConfirm">
        </Button>
    </beginButton>
    <endButton>
        <Button text="Cancel" press="dialogClose">
        </Button>
    </endButton>
  </Dialog>
</core:FragmentDefinition>