<core:FragmentDefinition 
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog xmlns="sap.m"  title="Customer Details" design="bold" class="sapUiSizeCompact HeaderHeading1" contentWidth="25%" contentHeight="15%">
		<content>
			<l:Grid defaultSpan="L12 M12 S12" width="auto" position="Center">
				<l:content>
					 <f:SimpleForm minWidth="1024" maxContainerCols="2"
						editable="true" layout="ResponsiveGridLayout" labelSpanL="2"
						labelSpanM="2"  emptySpanL="0" emptySpanM="0" columnsL="2"
						columnsM="2" class="HeaderHeading1">
						<f:content>
						<Label  text="Select Customer"/>
							<Input id="idCustomerType" valueHelpRequest="onCustomerFragment" valueHelpOnly="true" showValueHelp="true"/>
						</f:content>
					</f:SimpleForm>
			</l:content>
			</l:Grid>
		</content>
		<beginButton>
			<Button text="Submit" press="onRequestOk"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onRequestCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>