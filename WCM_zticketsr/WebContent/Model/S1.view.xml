<core:View xmlns="sap.m"
		   xmlns:core="sap.ui.core"
		   xmlns:mvc="sap.ui.core.mvc" 
		   xmlns:l="sap.ui.layout"
		   xmlns:f="sap.ui.layout.form" 
		   xmlns:d="sap.m.LabelDesign.Bold"
	       xmlns:u="sap.ui.unified" 
	       controllerName="zlearnamit.view.S1"
		   width="100%" height="100%">
	<App id="rootControl">
		<Page tiltle="My Demo Project">
			<content>
				
				<HBox  width="100%" justifyContent="Center">
				<f:SimpleForm minWidth="1024" id="formReading" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1" columnsL="2" columnsM="2" >
					<f:content>
						<Label text="User Name" required="true" design="Bold" />
						<Input type="text" placeholder="Enter Your User Name" />
						<Label text="Password" required="true" design="Bold" />
						<Input type="text" placeholder="Enter Your Password" />
						<Label text =""/>
						<Button text="Login" type="Accept">
						<layoutData>
							<l:GridData span="S6"/>
						</layoutData>
						</Button>
						<Button text="Cancel" type="Reject">
						<layoutData>
							<l:GridData span="S6"/>
						</layoutData>
						</Button>
					</f:content>
				</f:SimpleForm>
				</HBox>
				
			</content>
		</Page>
	</App>
</core:View>